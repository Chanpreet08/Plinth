<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lnmiit.plinth.Fragment.ContactUsFragment">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        >

    <EditText
        android:id="@+id/contactus_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textAutoCorrect"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        >

        <EditText
            android:id="@+id/contactus_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textAutoCorrect"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        >

        <EditText
            android:id="@+id/contactus_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Query"
            android:inputType="textAutoCorrect"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:layout_margin="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/extra"
        android:textColor="#FFFFFF"
        android:text="Submit"
        android:id="@+id/contactus_submit"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For any Query :"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/extra"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <android.support.v7.widget.AppCompatButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:background="@drawable/ic_phone"
            android:id="@+id/contactus_phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91-9468590302"
            android:layout_margin="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <android.support.v7.widget.AppCompatButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="2dp"
            android:id="@+id/contactus_email_bt"
            android:background="@drawable/ic_email_white_24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="plinth@lnmiit.ac.in"
            android:layout_margin="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Address:"
           android:textSize="16dp"
           android:textStyle="bold"
           android:layout_gravity="center"
           android:gravity="center"
           android:textColor="@color/extra"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The LNM Institute of Information Technology
Rupa ki Nangal, Post-Sumel, Via-Jamdoli
Jaipur-302031,
(Rajasthan) INDIA"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="2dp"/>
    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>
